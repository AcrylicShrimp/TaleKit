<UserControl x:Class="TaleKitEditor.UI.Workspaces.CommonWorkspaceTabs.AssetTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

			 xmlns:GControls="clr-namespace:GKitForWPF.WPF.UI.Controls;assembly=GKitForWPF"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<DockPanel>
			<DockPanel DockPanel.Dock="Top" Height="30" Background="{StaticResource TabBackground}">
				<TextBlock Name="CurrentDirectoryTextBlock" Text="현재 디렉토리 표시줄" Style="{StaticResource ContentText}" VerticalAlignment="Center" Margin="8,0,0,0"/>
			</DockPanel>
			<Grid Name="ExplorerContext" Background="{StaticResource ListBackground}" AllowDrop="True" 
				Loaded="ExplorerContext_Loaded" Drop="ExplorerContext_Drop">
				<StackPanel>
					<StackPanel Name="FileItemContext">
					</StackPanel>
					<GControls:ItemShadow/>
				</StackPanel>
				<TextBlock Name="AlertTextBlock" Style="{StaticResource ContentText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Grid>
		</DockPanel>
    </Grid>
</UserControl>
