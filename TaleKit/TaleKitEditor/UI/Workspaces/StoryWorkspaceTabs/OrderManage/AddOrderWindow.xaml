<Window x:Class="TaleKitEditor.UI.Workspaces.StoryWorkspaceTabs.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

		xmlns:StoryWorkspaceTabs="clr-namespace:TaleKitEditor.UI.Workspaces.StoryWorkspaceTabs"

        mc:Ignorable="d"
        Title="AddOrderWindow" Width="260" MinHeight="100" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" SizeToContent="Height"
		ContentRendered="Window_ContentRendered" Deactivated="Window_Deactivated" Closing="Window_Closing">
	<Grid Name="RootContext" SnapsToDevicePixels="True">
		<StackPanel Name="TypeItemStackPanel" Background="{StaticResource PopupWindowBackground}" Margin="0, 0, 16, 0">
			<StackPanel.BitmapEffect>
				<DropShadowBitmapEffect Opacity="0.3" Softness="0.3" ShadowDepth="3"/>
			</StackPanel.BitmapEffect>
		</StackPanel>
		<Border BorderBrush="{StaticResource PopupWindowStroke}" BorderThickness="1" Margin="0, 0, 16, 0"/>
		<Polyline Name="TailShape" Points="0,0 16,10, 0,20" Fill="{StaticResource PopupWindowBackground}" Stroke="{StaticResource PopupWindowStroke}" HorizontalAlignment="Right" Margin="0, 20" VerticalAlignment="Bottom" StrokeThickness="1" />
	</Grid>
</Window>
