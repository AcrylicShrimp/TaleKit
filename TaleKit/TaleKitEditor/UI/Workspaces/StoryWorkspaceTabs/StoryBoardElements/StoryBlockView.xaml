			 xmlns:CommonElements="clr-namespace:TaleKitEditor.UI.Workspaces.StoryWorkspaceTabs.CommonElements"

             mc:Ignorable="d" 
             d:DesignWidth="220">
	<DockPanel Name="ItemPanel" Background="{StaticResource ItemBackground}" Height="35">
