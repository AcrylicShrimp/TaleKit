			<CommonElements:ComponentMarker></CommonElements:ComponentMarker>
		</StackPanel>
		<TextBlock Name="PreviewTextBlock" Text="스크립트 미리보기" VerticalAlignment="Center" FontFamily="/TaleKitEditor;component/Resources/Fonts/#KoPubDotum_Pro Medium" Foreground="#FFB5B5B5" Margin="8,0,0,0"></TextBlock>
	</DockPanel>
</UserControl>
